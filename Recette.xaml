                <StackPanel Grid.Row="1" Margin="8,24,8,4">
                    <TextBlock Margin="0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Herloom Tomatoes Salad" />
                    <Viewbox Height="16" Margin="0,4,0,8" HorizontalAlignment="Left">
